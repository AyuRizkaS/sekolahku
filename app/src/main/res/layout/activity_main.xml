<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/background" android:background="#0F4CAF50"
        android:backgroundTint="#1D1111">

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="#E084A8" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="123dp"
            android:layout_height="105dp" app:srcCompat="@drawable/school__1_"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/view"/>
    <TextView
            android:text="SMK SA BISA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="430dp"
            android:layout_height="557dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="141dp" android:paddingLeft="30dp" android:paddingRight="30dp"
                    android:paddingBottom="30dp">
                <androidx.cardview.widget.CardView
                        android:layout_width="174dp"
                        android:layout_height="match_parent" app:cardBackgroundColor="#6F7B1FA2"
                        app:cardCornerRadius="20dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                    <ImageView
                            android:layout_width="162dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/personal_information"
                            android:id="@+id/imageView2"/>
                    <TextView
                            android:text="Info BKK"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content" android:id="@+id/textView8"
                            android:layout_marginTop="80dp" android:layout_marginLeft="35dp" android:textSize="24sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="228dp"
                        android:layout_height="match_parent" app:cardBackgroundColor="#6D0097A7"
                        app:cardCornerRadius="20dp">
                    <ImageView
                            android:layout_width="163dp"
                            android:layout_height="90dp" app:srcCompat="@drawable/plan"
                            android:id="@+id/imageView3"/>
                    <TextView
                            android:text="Info JURUSAN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:layout_marginTop="90dp" android:layout_marginLeft="30dp" android:textSize="18sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="416dp"
                    android:layout_height="153dp" android:background="#00A02727" android:paddingLeft="30dp"
                    android:paddingBottom="30dp" android:paddingRight="30dp" android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="137dp" app:cardBackgroundColor="#8D0288D1"
                        app:cardCornerRadius="20dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                    <ImageView
                            android:layout_width="146dp"
                            android:layout_height="89dp" app:srcCompat="@drawable/to_do_list"
                            android:id="@+id/imageView4"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="153dp"
                        android:layout_height="135dp" app:cardBackgroundColor="#8800796B"
                        android:padding="30dp" android:paddingStart="30dp"
                        app:cardCornerRadius="20dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="87dp" app:srcCompat="@drawable/meeting"
                            android:id="@+id/imageView5"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="434dp"
                    android:layout_height="217dp"
                    android:paddingLeft="30dp" android:paddingRight="30dp" android:paddingBottom="30dp"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                <androidx.cardview.widget.CardView
                        android:layout_width="166dp"
                        android:layout_height="144dp" app:cardBackgroundColor="#97536E" app:cardCornerRadius="20dp"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="85dp" app:srcCompat="@drawable/news"
                            android:id="@+id/imageView6"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="152dp"
                        android:layout_height="146dp" android:background="#303F9F"
                        app:cardBackgroundColor="#AFB42B" app:cardCornerRadius="20dp" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="95dp" app:srcCompat="@drawable/open_book"
                            android:id="@+id/imageView7" tools:layout_editor_absoluteY="-12dp"
                            tools:layout_editor_absoluteX="0dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>